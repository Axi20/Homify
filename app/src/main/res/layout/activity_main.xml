<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/ct_1_btn"
            style="@style/HomepageButtonStyle"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/ct_btn_1" />

        <Button
            android:id="@+id/ct_2_btn"
            style="@style/HomepageButtonStyle"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginEnd="30dp"
            android:text="@string/ct_btn_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/recipes_btn"
            style="@style/HomepageButtonStyle"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/recipe_btn"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="100dp" />

        <Button
            android:id="@+id/settings_btn"
            style="@style/HomepageButtonStyle"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginEnd="30dp"
            android:text="@string/settings_btn"
            tools:layout_editor_absoluteX="219dp"
            tools:layout_editor_absoluteY="109dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/ct_3_btn"
            style="@style/HomepageButtonStyle"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:text="@string/ct_btn_3"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="100dp" />

        <Button
            android:id="@+id/ct_4_btn"
            style="@style/HomepageButtonStyle"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginEnd="30dp"
            android:text="@string/ct_btn_4"
            tools:layout_editor_absoluteX="219dp"
            tools:layout_editor_absoluteY="109dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/shopping_list_btn"
            style="@style/HomepageButtonStyle"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:text="@string/shopping_list_btn" />

        <Button
            android:id="@+id/add_new_item_btn"
            style="@style/HomepageButtonStyle"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginEnd="30dp"
            android:text="@string/add_item"
            tools:layout_editor_absoluteX="219dp"
            tools:layout_editor_absoluteY="109dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>